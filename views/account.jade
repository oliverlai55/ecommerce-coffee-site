extends layout

block content
		#account-wrapper.container
			h1 Account Information
			#information-wrap
				.section-wrap.row
					.section-header-wrap.col-sm-12
						h2 Choices
						a(href='/choices') (Edit)
					.choice.col-sm-12
						p.col-sm-3 Grind
						p.col-sm-9 #{grind ? grind : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Frequency of Delivery
						p.col-sm-9 #{frequency ? frequency : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Coffee, in Pounds
						p.col-sm-9 #{pounds ? pounds : 'None'}
				.section-wrap.row
					.section-header-wrap.col-sm-12
						h2 Delivery Information
						a(href='/delivery') (Edit)
					.choice.col-sm-12
						p.col-sm-3 Full Name
						p.col-sm-9 #{fullName ? fullName : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Address
						p.col-sm-9 #{address1 ? address1 : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Address 2
						p.col-sm-12 #{address2 ? address2 : 'None'}
					.choice.col-sm-12
						p.col-sm-3 City
						p.col-sm-9 #{city ? city : 'None'}
					.choice.col-sm-12
						p.col-sm-3 State
						p.col-sm-9 #{state ? state : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Zip code
						p.col-sm-9 #{zipCode ? zipCode : 'None'}
					.choice.col-sm-12
						p.col-sm-3 Next Delivery
						p.col-sm-9 #{deliveryDate ? deliveryDate : 'None'}
			#btn-wrap
				input.btn.btn-danger.btn-lg(type="submit", name="submit", value="Cancel My Account")
				
