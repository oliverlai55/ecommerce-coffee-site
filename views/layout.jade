doctype html
html
	head
		title= title	
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
		<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		#nav
			.container
				a#logo(href="/") DC Roasters

				#right-wrapper
					if (!username)
						#nav-log-in
							a.btn.btn-primary(href="/login") Log In
						#nav-subscribe
							a.btn.btn-primary(href="/register") Subscribe
					if (username)
						#nav-log-in Welcome,
							a(href="/account") #{username}
							a.btn.btn-primary(href="/logout") Logout

		if (username)
			#signup-wrapper
				.container
					ul.signup-progress
						li
							a(href="/").welcome 1. Welcome
						li.active
							a(href="/choices").options 2. Options
						li
							a(href="/delivery").delivery  3. Delivery
						li
							a(href="/payment").payment 4. Payment

		block content


	#footer
		#footer-container.container
			a#footer-logo(href="/") DC Roasters
			ul
				li
					a(href="#") Blog
				li
					a(href="#") Contact
				li
					a(href="#") Suppliers
			#copywrite
				p &copy;2015 DC Coffee Roasters
				ul
					li
						a(href="#") Terms
					li
						a(href="#") Privacy
			#attributions
				p Creative Commons images courtesy of:
